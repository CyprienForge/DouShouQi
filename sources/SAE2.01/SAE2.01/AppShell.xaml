<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SAE2._01.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SAE2._01"
    xmlns:pages="clr-namespace:SAE2._01.Views.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="DouShouQi">

    <ShellContent
        Title="Homepage"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />

    <ShellContent
        Title="Pregame"
        ContentTemplate="{DataTemplate pages:Pregame}"
        Route="PregamePage" />

    <ShellContent
        Title="Board"
        ContentTemplate="{DataTemplate pages:BoardPage}"
        Route="BoardPage" />

    <ShellContent
        Title="History"
        ContentTemplate="{DataTemplate pages:HistoryPage}"
        Route="HistoryPage" />

    <ShellContent
        Title="Rules"
        ContentTemplate="{DataTemplate pages:RulesPage}"
        Route="HomeRulesPage" />

     <ShellContent
        Title="Credits"
        ContentTemplate="{DataTemplate pages:Credits}"
        Route="CreditsPage"/>

    <ShellContent
        Title="Parameters"
        ContentTemplate="{DataTemplate pages:ParametersPage}"
        Route="HomeParametersPage" />

    <ShellContent
        Title="Victory"
        ContentTemplate="{DataTemplate pages:VictoryPage}"
        Route="VictoryPage" />
</Shell>
